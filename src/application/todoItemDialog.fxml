<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.DatePicker?>


<DialogPane fx:controller="application.DialogController"
			xmlns:fx="http://javafx.com/fxml/1">
			
			<headerText>
				
			</headerText>
			<content>
				<GridPane vgap="10" hgap="10">
					<Label text="Short Description:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
					<TextField fx:id="shortDescriptionField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
					<Label text="Details:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
					<TextArea fx:id="detailsDescriptionField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
					<Label text="Deadline:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
					<DatePicker fx:id="deadlinePick" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
				</GridPane>
			</content>
			
			
			
</DialogPane>

<!-- 
	DialogPane is layout manager for dialogues, allows to set header graphic content and buttons.

 -->